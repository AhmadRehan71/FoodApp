<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/shaperelinear"
    tools:context=".ForgotPassword">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textAlignment="center"
        android:textSize="17sp"
        android:textStyle="bold"
        android:text="Enter your email to reset password"/>


    <EditText
        android:id="@+id/emailReset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:background="@drawable/shapeinput"/>

    <ProgressBar
        android:id="@+id/progressForgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/buttonRequestCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:text="Send Reset Code"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:layout_marginTop="12dp"
        android:background="@drawable/border_radius"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        android:layout_marginTop="15dp"/>
    <ProgressBar
        android:id="@+id/progressForgot2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"/>
    <EditText
        android:id="@+id/code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:inputType="text"
        android:hint="Enter code sent to your email"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:background="@drawable/shapeinput"/>

    <Button
        android:id="@+id/buttonReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:text="Verify and Reset"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:layout_marginTop="30dp"
        android:background="@drawable/border_radius"/>

</LinearLayout>